<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoDownloaderForTwitter" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#EEEEEE</item>
        <item name="popupMenuStyle">@style/popUpMenu</item>
        <item name="android:fontFamily">@font/helvetica</item>

    </style>


    <style name="popUpMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.VideoDownloaderForTwitter.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_accent</item>
        <item name="colorSecondaryVariant">@color/color_accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#EEEEEE</item>
        <item name="popupMenuStyle">@style/popUpMenu</item>
        <item name="android:fontFamily">@font/helvetica</item>

    </style>

    <style name="CustomBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:theme">@style/CustomBottomNavigationBackground</item>
    </style>

    <style name="CustomBottomNavigationBackground">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>


</resources>